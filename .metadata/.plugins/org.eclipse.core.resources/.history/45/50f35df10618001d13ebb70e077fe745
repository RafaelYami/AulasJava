package aulas;

import java.util.Locale;
import java.util.Scanner;

public class ExercicioArrayMatriz {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in).useLocale(Locale.US);
		
		//Exercício1
		/*
		double[] nota = new double[4];
		double media = 0.0;
		
		for(int i = 0; i < nota.length; i++) {
			System.out.print("Digite a nota: ");
			nota[i] = sc.nextDouble();
			media += nota[i] / 4;
		}
		
		//media = (nota[0] + nota[1] + nota[2] + nota[3]) / nota.length;
		
		System.out.printf("A média é: %.2f", media);
		*/
		
		//Exercício2
		
		int[] idade = new int[5];
		double[] altura = new double[5];
		
		for(int i = 0; i < idade.length; i++) {
			System.out.print("Digite a idade: ");
			idade[i] = sc.nextInt();
		}
		
		for(int a = 0; a < altura.length; a++) {
			System.out.print("Digite a altura: ");
			altura[a] = sc.nextDouble();
		}
		
		System.out.printf("A primeira pessoa tem %d anos e %.2f de altura.", idade, altura);
		
		sc.close();

	}

}
